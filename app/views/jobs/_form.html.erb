<%= simple_form_for(@job, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :title, required: true, label: false, placeholder: "Job Title", input_html: {class: "form-control"} %>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: {class: "form-control"}, rows: 3 %>
    <%= f.input :apply, required: true, label: false, placeholder: "How do people apply for this job?", input_html: {class: "form-control"}, rows: 2 %>
    <%= f.input :company, required: true, label: false, placeholder: "Enter your company name", input_html: {class: "form-control"} %>

    <%= f.input :url, required: true, label: false, placeholder: "URL Example https://mycompany.com/careers/apply", input_html: {class: "form-control"} %>
    <%= f.input :image %>
    
    <div class="checkbox text-center">
     <p>Availability</p>
     <%= f.input :availability, required: false, label: false %>
    </div>
 


    <%= f.button :submit, class: "btn btn-primary btn-block" %>

<% end %>
